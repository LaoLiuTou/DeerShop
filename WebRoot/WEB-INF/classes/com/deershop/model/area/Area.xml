<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deershop.dao.area.IAreaMapper"> 
	<select id="selectareaById" parameterType="String" resultType="Area">
		SELECT * FROM area WHERE ID=#{id}
	</select>

	<delete id="deletearea" parameterType="String"> 
		DELETE FROM area WHERE ID=#{id}
	</delete>

	<select id="selectareaByParam" parameterType="java.util.Map" resultType="Area">
		SELECT *
		FROM area
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id != null"> AND ID =#{id} </if>
			<if test="pid != null"> AND PID =#{pid} </if>
			<if test="status != null"> AND STATUS =#{status} </if>
			<if test="cd_dtFrom != null"> AND unix_timestamp(CD_DT) &gt;=unix_timestamp(#{cd_dtFrom}) </if>
			<if test="cd_dtTo != null"> AND unix_timestamp(CD_DT) &lt;=unix_timestamp(#{cd_dtTo}) </if>
			<if test="cd_dt != null"> AND CD_DT =#{cd_dt} </if>
			<if test="up_dtFrom != null"> AND unix_timestamp(UP_DT) &gt;=unix_timestamp(#{up_dtFrom}) </if>
			<if test="up_dtTo != null"> AND unix_timestamp(UP_DT) &lt;=unix_timestamp(#{up_dtTo}) </if>
			<if test="up_dt != null"> AND UP_DT =#{up_dt} </if>
		</trim>  
			<if test="orderBy!= null"> ORDER BY   #{orderBy} </if>
		LIMIT #{fromPage},#{toPage} 
	</select>

	<select id="selectCountareaByParam" parameterType="java.util.Map" resultType="int">
		SELECT COUNT(id) 
		FROM area 
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id != null"> AND ID =#{id} </if>
			<if test="pid != null"> AND PID =#{pid} </if>
			<if test="status != null"> AND STATUS =#{status} </if>
			<if test="cd_dtFrom != null"> AND unix_timestamp(CD_DT) &gt;=unix_timestamp(#{cd_dtFrom}) </if>
			<if test="cd_dtTo != null"> AND unix_timestamp(CD_DT) &lt;=unix_timestamp(#{cd_dtTo}) </if>
			<if test="cd_dt != null"> AND CD_DT =#{cd_dt} </if>
			<if test="up_dtFrom != null"> AND unix_timestamp(UP_DT) &gt;=unix_timestamp(#{up_dtFrom}) </if>
			<if test="up_dtTo != null"> AND unix_timestamp(UP_DT) &lt;=unix_timestamp(#{up_dtTo}) </if>
			<if test="up_dt != null"> AND UP_DT =#{up_dt} </if>
		</trim>  
	</select>

	<update id="updatearea" parameterType="Area">
		UPDATE area 
		<trim prefix="SET" suffixOverrides=",">
			<if test="id != null">ID=#{id}, </if>
			<if test="pid != null">PID=#{pid}, </if>
			<if test="status != null">STATUS=#{status}, </if>
			<if test="cd_dt != null">CD_DT=#{cd_dt}, </if>
			<if test="up_dt != null">UP_DT=#{up_dt}, </if>
		</trim>
		WHERE ID=#{id}
	</update>

	<insert id="addarea" parameterType="Area" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO area 
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="pid != null">PID, </if>
			<if test="status != null">STATUS, </if>
			<if test="cd_dt != null">CD_DT, </if>
			<if test="up_dt != null">UP_DT, </if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides="," >
			<if test="pid != null">#{pid}, </if>
			<if test="status != null">#{status}, </if>
			<if test="cd_dt != null">#{cd_dt}, </if>
			<if test="up_dt != null">#{up_dt}, </if>
		</trim>
	</insert>

	<insert id="muladdarea" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
		<foreach collection="list" item="item" index="index" open=""
			close="" separator=";">
			INSERT INTO area 
			<trim prefix="(" suffix=")" suffixOverrides="," >
				<if test="item.id != null">ID, </if>
				<if test="item.pid != null">PID, </if>
				<if test="item.status != null">STATUS, </if>
				<if test="item.cd_dt != null">CD_DT, </if>
				<if test="item.up_dt != null">UP_DT, </if>
			</trim>
			<trim prefix="VALUES (" suffix=")" suffixOverrides="," >
				<if test="item.id != null">#{item.id}, </if>
				<if test="item.pid != null">#{item.pid}, </if>
				<if test="item.status != null">#{item.status}, </if>
				<if test="item.cd_dt != null">#{item.cd_dt}, </if>
				<if test="item.up_dt != null">#{item.up_dt}, </if>
			</trim>
		</foreach>
	</insert>
</mapper>
